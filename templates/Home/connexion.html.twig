{# templates/Home/connexion.html.twig #}
{% extends "layout.html.twig" %}
{% block body %}
    {% block bloc1 %}
        <div id="contenu">
            <h2>Identification utilisateur</h2>
            {%if(message is defined ) %}
                <div class="erreur">
                    <ul>{{message}}</ul>
                </div>
            {%endif%}
            <form method="POST" action="{{path('app_frais_validerconnexion')}}">
                <p>
                    <label for="nom">Login*</label>
                    <input id="login" type="text" name="login" size="30" maxlength="45" required>
                </p>
                <p>
                    <label for="mdp">Mot de passe*</label>
                    <input id="mdp" type="password" name="mdp" size="30" maxlength="45" required>
                </p>
                <input type="submit" value="Valider" name="valider">
                <input type="reset" value="Annuler" name="annuler">
                </p>
            </form>
        </div>
    {% endblock %}
{% endblock %}